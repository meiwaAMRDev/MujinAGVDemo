<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="myvar" value="myvalue"/>
  <variable name="logDir" value="Logs"/>


  <targets>
    <!-- ProgramLogの設定 -->
    <target xsi:type="File" name="ProgramLog" fileName="${logDir}/ProgramLogs/${shortdate}.log" layout="${longdate},[${uppercase:${level}}],${message}" />
    <!-- FormLogの設定 -->
    <target xsi:type="File" name="FormLog" fileName="${logDir}/FormLogs/${shortdate}.log" layout="${longdate},[${uppercase:${level}}],${message}" />
    <!-- Consoleの設定 -->
    <target xsi:type="ColoredConsole" name="Console" layout="${longdate},[${uppercase:${level}}],${message}" />
  </targets>

  <rules>
    <!--ProgramLoggerはProgramLogで出力-->
    <logger name="ProgramLogger" writeTo="ProgramLog" />
    <!--FormLoggerはFormLogで出力-->
    <logger name="FormLogger" writeTo="FormLog" />
    <!--名前によらずConsoleでも出力-->
    <logger name="*" writeTo="Console" />
  </rules>
</nlog>
